<tool id="mergedb" version="0.1" name="Merge FASTA Databases">
  <description>
    Concatenate FASTA database files together. Only first appearence
    of each unique sequence will appear in output.
  </description>
  <command interpreter="python">
    dbconcat.py 
    $output
    #for input in $inputs
    $input.input
    #end for
  </command>
  <inputs>
    <repeat name="inputs" title="Input FASTA File(s)">
      <param format="fasta" name="input" type="data" label="FASTA File"/>
    </repeat>
  </inputs>
  <outputs>
    <data format="fasta" name="output" label="Merged FASTA from ${on_string}"/>
  </outputs>
  <help>
  </help>
</tool>

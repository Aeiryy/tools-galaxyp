<tool id="convert_windows_newlines" version="0.1" name="ProteinPilot - Convert Windows Line Breaks">
    <description></description>
    <command>
<![CDATA[
     tr -d '\r' < $input1 > $output
]]>
    </command>
    <inputs>
        <param format="txt" name="input1" type="data" label="Tabular Input File" help=""/>
    </inputs>
    <outputs>
        <data name="output" format="input" metadata_source="input1"/>
    </outputs>
    <help>
        Standardize the output of Windows tools like "Convert ProteinPilot Group to Tabular" for use in Galaxy.
    </help>
</tool>

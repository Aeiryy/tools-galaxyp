<tool id="tpp_protein_prophet" name="TPP ProteinProphet" version="@WRAPPER_VERSION@.0">
   <description>process pep.xml datasets</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements" />
    <expand macro="stdio" />
    <command><![CDATA[
        #set $pepxmls = []
        #for $input in $inputs:
          ln -s "$input" "$input.name" && 
          $pepxmls.append('"' + $input.name + '"')
        #end for 
        ProteinProphet 
        #echo ' '.join($pepxmls)
        output.prot.xml
    ]]></command>
    <inputs>
        <param type="hidden" name="prefix" value="interact" label="output file prefix" />
        <param type="data" name="inputs" format="pepxml" multiple="true" label="pep.xml ipnuts" />
    </inputs>
    <outputs>
	<data name="output" format="protxml" from_work_dir="output.prot.xml"/>
    </outputs>
    <help><![CDATA[

    ]]></help>
    <expand macro="citations" />
</tool>

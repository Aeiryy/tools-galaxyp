<tool id="rollout_nested_collection" name="Rollout nested list" version="3.1">
    <description>into a single long list</description>
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <command><![CDATA[
        mkdir output && cd output
        #for $sublist in $nestedlist
            #for $fname in $sublist
                && ln -s '$fname' '$sublist.name'_'$fname.element_identifier'.'$fname.extension'
            #end for
        #end for
    ]]>
    </command>
    <inputs>
        <param name="nestedlist" type="data_collection" collection_type="list:list" label="List of files to batch" />
    </inputs>
    <outputs>
        <collection name="unrolled_list" type="list" label="Unrolled mzIdentML list">
              <discover_datasets pattern="__name_and_ext__" directory="output" />
        </collection>
    </outputs>
    <tests>
        <test>
            <param name="nestedlist">
                <collection type="list:list">
                    <element name="pool0_batch0">
                        <collection type="list">
                            <element name="inputfn0" ftype="mzid" value="empty_file1.mzid"/>
                            <element name="inputfn1" ftype="mzid" value="empty_file2.mzid"/>
                        </collection>
                    </element>
                    <element name="pool0_batch1">
                        <collection type="list">
                            <element name="inputfn0" ftype="mzid" value="empty_file3.mzid"/>
                            <element name="inputfn1" ftype="mzid" value="empty_file4.mzid"/>
                        </collection>
                    </element>
                </collection>
            </param>
            <output_collection name="unrolled_list" type="list">
                    <element name="pool0_batch0_inputfn0" file="empty_file1.mzid"/>
                    <element name="pool0_batch0_inputfn1" file="empty_file2.mzid"/>
                    <element name="pool0_batch1_inputfn0" file="empty_file3.mzid"/>
                    <element name="pool0_batch1_inputfn1" file="empty_file4.mzid"/>
            </output_collection>
        </test>
    </tests>
    <help>
    Rolls out nested collections (list-of-lists), e.g. created by the "Create nested list" tool into one single list.
    </help>
</tool>

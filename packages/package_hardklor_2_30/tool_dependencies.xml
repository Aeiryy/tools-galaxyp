<?xml version="1.0"?>
<tool_dependency>
    <package name="hardklor" version="2.30">
        <install version="1.0">
            <actions>
		<action type="download_by_url" target_filename="hardklor.zip">https://drive.google.com/uc?export=download&amp;id=0ByyfOdPaY1xkX0h6RTBnQWNhb3c</action>
                <action type="move_file">
                    <source>hardklor</source>
                    <destination>$INSTALL_DIR/bin</destination>
                </action>
                <action type="chmod">
	            <file mode="755">$INSTALL_DIR/bin/hardklor</file>
                </action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>
            </actions>
        </install>
        <readme>
            Install Galaxy package application for hardkl√∂r 2.30
            https://proteome.gs.washington.edu/software/hardklor/
        </readme>
    </package>
</tool_dependency>
